@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3 fw-bold mt-4 mb-3">The Joel Hilton Film Collection</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <img src="~/joel_hilton.jpg"
                     class="img-fluid rounded-3 shadow"
                     alt="Joel Hilton"
                     style="max-height: 500px; object-fit: cover;">

                <div class="card-body">
                    <p class="text-muted italic">
                        Joel Hilton: The brother of Spencer Hilton and Evil Hilton
                    </p>
                </div>
            </div>

            <hr class="my-4">

            <p class="lead">
                Welcome to the not very official website of Joel Hilton and his film collection.
                Explore the site to learn more about the man.
            </p>
        </div>
    </div>
</div>