@model Movie

@{
    ViewData["Title"] = "Add Movie";
}

<div class="text-center mb-4">
    <h1 class="display-4">Add Movie to Collection</h1>
    <hr class="w-25 mx-auto" />
</div>

<div class="row justify-content-center">
    <div class="col-md-6 border p-4 shadow-sm bg-light rounded">
        <form method="post">
            
            <div class="mb-3">
                <label asp-for="Category" class="form-label fw-bold">Category</label>
                <input asp-for="Category" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Title</label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Year" class="form-label fw-bold">Year</label>
                    <input asp-for="Year" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Director" class="form-label fw-bold">Director</label>
                    <input asp-for="Director" class="form-control" required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Rating" class="form-label fw-bold">Rating</label>
                    <select asp-for="Rating" class="form-select" required>
                        <option value="">Select Rating...</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Edited" class="form-label fw-bold">Edited</label>
                    <select asp-for="Edited" class="form-select">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="LentTo" class="form-label fw-bold">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
            </div>

            <div class="mb-4">
                <label asp-for="Notes" class="form-label fw-bold">Notes</label>
                <input asp-for="Notes" class="form-control" maxlength="25" placeholder="Max 25 characters" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Submit Movie</button>
            </div>
            
        </form>
    </div>
</div>